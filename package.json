{
  "name": "devtoolbox",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "node dist/devtoolbox/server/main.js",
    "serve:ssr": "node dist/devtoolbox/server/main.js",
    "build": "ng build",
    "build:ssr": "ng build --configuration production && ng run devtoolbox:server:production",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:devtoolbox": "node dist/devtoolbox/server/server.mjs",
    "lint": "ng lint",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "test:e2e": "start-server-and-test start http://localhost:4200 cypress:run",
    "lighthouse": "lighthouse http://localhost:4200 --output html --output-path ./lighthouse-report.html --view",
    "prettier:check": "prettier --check \"**/*.{ts,js,html,scss,json}\"",
    "prettier:format": "prettier --write \"**/*.{ts,js,html,scss,json}\""
  },
  "private": true,
  "dependencies": {
    "@angular-eslint/eslint-plugin": "^19.0.2",
    "@angular-eslint/eslint-plugin-template": "^19.0.2",
    "@angular/animations": "^18.2.13",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/platform-server": "^18.2.0",
    "@angular/router": "^18.2.0",
    "@angular/ssr": "^18.2.4",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "express": "^4.18.2",
    "lucide": "^0.468.0",
    "lucide-angular": "^0.468.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-builders/jest": "^18.0.0",
    "@angular-devkit/build-angular": "^18.2.4",
    "@angular-eslint/template-parser": "^19.0.2",
    "@angular/cli": "^18.2.4",
    "@angular/compiler-cli": "^18.2.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/node": "^18.18.0",
    "angular-eslint": "19.0.2",
    "cypress": "^13.16.1",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.4.2",
    "lighthouse": "^12.3.0",
    "prettier": "^3.4.2",
    "start-server-and-test": "^2.0.9",
    "ts-jest": "^29.2.5",
    "typescript": "~5.5.2",
    "typescript-eslint": "8.18.0"
  }
}
